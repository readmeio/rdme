{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "erasableSyntaxOnly": true,
    "lib": ["ES2022"],
    "module": "Node18",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*"]
}
