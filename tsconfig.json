{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "useUnknownInCatchVariables": false,
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*"]
}
