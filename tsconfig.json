{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "ES2021.Intl"],
    "module": "CommonJS",
    "outDir": "dist/",
    "paths": {
      "editor": [".sink.d.ts"]
    },
    "resolveJsonModule": true,
    "target": "ES2020"
  },
  "include": ["./config/*.js", "./config/*.json", "./src/**/*"]
}
