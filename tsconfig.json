{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "ES2021.Intl"],
    "module": "NodeNext",
    "outDir": "dist/",
    "paths": {
      "editor": [".sink.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"]
}
